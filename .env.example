# Required: Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=global

# Alternative: Custom environment variables (backward compatibility)
# VERTEX_PROJECT_ID=your-gcp-project-id
# VERTEX_LOCATION=global

# Model Configuration (Agent settings)
VERTEX_MODEL=gemini-1.5-flash-002
VERTEX_TEMPERATURE=1.0
VERTEX_MAX_TOKENS=8192
VERTEX_TOP_P=0.95
VERTEX_TOP_K=40

# Agent Mode: Conversation Management
VERTEX_ENABLE_CONVERSATIONS=false  # Set to 'true' to enable multi-turn conversations
VERTEX_SESSION_TIMEOUT=3600        # Session timeout in seconds (default: 1 hour)
VERTEX_MAX_HISTORY=10              # Maximum messages to keep in conversation history

# Agent Mode: Chain of Thought Reasoning
VERTEX_ENABLE_REASONING=false      # Set to 'true' to enable reasoning capability
VERTEX_MAX_REASONING_STEPS=5       # Maximum reasoning steps (default: 5)

# Logging Configuration
# VERTEX_LOG_DIR=/path/to/logs     # Custom directory for log files (default: ./logs)
VERTEX_DISABLE_LOGGING=false       # Set to 'true' to disable file-based logging

# Agent Mode: MCP-to-MCP Connectivity
# VERTEX_MCP_SERVERS='[{"name":"server1","command":"node","args":["path/to/server.js"],"env":{}}]'

# Google Cloud Authentication (choose one method)
# Method 1: Service Account Key File
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Method 2: Application Default Credentials (preferred for local development)
# Run: gcloud auth application-default login
